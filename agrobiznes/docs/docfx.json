{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
  {
    "src": [
      {
        "src": "..",
        "files": [
          "01_agro.Core/01_agro.Core.csproj",
          "03_agro.Logic/03_agro.Logic.csproj",
          "02_agro.Data/02_agro.Data.csproj"
        ]
      }
    ],
    "dest": "api"
  }
],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "agro-biz",
      "_appTitle": "agro-biz",
      "_enableSearch": true,
      "pdf": true
    }
  }
}